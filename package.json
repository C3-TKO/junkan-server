{
  "name": "junkan-server",
  "version": "1.0.0",
  "description": "This is an optional server for the junkan web app",
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/nodemon/bin/nodemon.js",
    "test": "nyc mocha --timeout 1000 && eslint ./app",
    "test-debug": "mocha --inspect --timeout 1000",
    "lint": "eslint ./app index.js ./test",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "api-spec-generate": "bootprint openapi swagger.yml ./docs/api-spec/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/C3-TKO/junkan-server.git"
  },
  "author": "Thomas Kolar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/C3-TKO/junkan-server/issues"
  },
  "homepage": "https://github.com/C3-TKO/junkan-server#readme",
  "dependencies": {
    "bluebird": "^3.5.0",
    "cheerio": "latest",
    "express": "latest",
    "http-status-codes": "^1.2.0",
    "request": "latest",
    "request-promise": "^4.2.1",
    "validator": "^8.0.0"
  },
  "devDependencies": {
    "bootprint": "^1.0.0",
    "bootprint-openapi": "^1.0.1",
    "chai": "^4.1.0",
    "chai-http": "^3.0.0",
    "coveralls": "^2.13.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.7.0",
    "mocha": "^4.0.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.3",
    "sinon": "^3.0.0"
  }
}
